{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AWS": {
        "Profile": "read-parameter-store",
        "Region": "us-east-1"
    },
    "AllowedHosts": "*",
    "AllowedOrigins": ["http://localhost:5000", "http://localhost:5173"],
    "MessageBroker": {
        "RabbitMQ": {
            "Host": "amqp://localhost:5672",
            "UserName": "parameter-store",
            "Password": "parameter-store"
        }
    },
    "Oidc": {
        "ClientId": "parameter-store",
        "ClientSecret": "parameter-store",
        "MetadataAddress": "https://cognito-idp.us-east-1.amazonaws.com/us-east-1_elhiz5zUs/.well-known/openid-configuration",
        "RequireHttpsMetadata": false,
        "ValidateIssuer": false,
        "ValidateAudience": false,
        "ValidateLifetime": true,
        "ValidateIssuerSigningKey": true
    },
    "Seq": {
        "ServerUrl": "http://localhost:5341"
    },
    "Postgres": {
        "ConnectionString": "parameter-store",
        "SchemaName": "customer"
    },
    "HotelHour": {
        "StartHour": "14:00",
        "EndHour": "10:00"
    },
    "RoomPricePolicies": {
        "EconomyRoomPolicy": {
            "BasePrice": 120,
            "CapacityMultiplier": 0.2
        },
        "BasicRoomPolicy": {
            "BasePrice": 180,
            "CapacityMultiplier": 0.2
        },
        "PremiumRoomPolicy": {
            "BasePrice": 250,
            "CapacityMultiplier": 0.2
        }
    },
    "TenantPricePolicy": {
        "Discount": 0.97
    }
}
